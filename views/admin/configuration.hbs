<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    {{adminPageTitle}}
                </h1>

                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-dashboard"></i>  <a href="/admin">Dashboard</a>
                    </li>
                    <li class="active">
                        <i class="fa fa-bar-chart-o"></i> {{adminPageTitle}}
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="alert alert-success" {{#if noMessage}}hidden{{/if}}>{{successMsg}}</div>
                <div class="alert alert-success" {{#if noErrorMsg}}hidden{{/if}}>{{errorMsg}}</div>
            </div>
        </div>
        <!-- /.row -->
        <!-- /.row -->
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-1">
                        <div id="success" class="alert alert-success" {{#if noMessage}}hidden{{/if}}>
                        {{successMsg}}
                    </div>
                    <div id="danger" class="alert alert-danger" {{#if noErrorMsg}}hidden{{/if}}>
                    {{errorMsg}}
                </div>
            </div>
        </div>
        <div class="row">
        <div class="container">
            <form class="form-horizontal" role="form">
                <div class="form-group">
                <ul class="list-group">
                    <li class="list-group-item">
                    <label for="storeName" class="control-label">Store Name</label>
                        <input type="text" id="storeName" value="{{config.title}}" placeholder="Your Store" class="form-control" autofocus>
                        <span class="help-block">Store Name</span>
                    </li>
                    </ul>
                </div>
                <div class="form-group">
                <ul class="list-group">
                    <li class="list-group-item">
                    <label for="dbhost" class="control-label">Database Host</label>
                        <input type="text" value="{{config.dbhost}}" id="dbhost" placeholder="dbhost" class="form-control">
                        <span class="help-block">FQDN of host where MongoDB is running</span>

                    </li>
                    <li class="list-group-item">
                    <label for="dbport" class="control-label">Database Port</label>
                        <input type="text" id="dbport" placeholder="27017" value="{{config.dbport}}" class="form-control">
                        <span class="help-block">TCP Port Where MongoDB is Listening</span>

                    </li>
                    </ul>
                </div>
                <div class="form-group">
                <ul class="list-group">
                    <li class="list-group-item">
                    <label for="copyright" class="control-label">Copyright Text</label>
                        <input type="text" id="copyright" value="{{config.copyright}}" class="form-control">
                        <span class="help-block">Will appear in footer of site</span>

                    </li>
                    </ul>
                </div>
                 <div class="form-group">
                    <ul class="list-group">
                    <li class="list-group-item">
                        <label for='shippable'>Shippable?</label>
                        <div class="material-switch pull-right">
                            No <input id="shippable" name="shippable" type="checkbox"/>
                            <label for="shippable" class="label-success"></label> Yes
                        </div>
                    </li>
                    <li class="list-group-item">
                        <label for='taxable'>Taxable?</label>
                        <div class="material-switch pull-right">
                            No <input id="taxable" name="taxable" type="checkbox"/>
                            <label for="taxable" class="label-success"></label> Yes
                        </div>
                    </li>
                    </ul>
                </div>
                <div class="form-group">
                <ul class="list-group">
                    <li class="list-group-item">
                    <label for="addr1" class="control-label">Address</label>
                        <input type="text" id="addr1" value="{{config.business.addr1}}" class="form-control">
                    </li>
                
                    <li class="list-group-item">
                    <label for="city" class="control-label">City</label>
                        <input type="text" id="city" value="{{config.business.city}}" class="form-control">
                        <span class="help-block">Name of city where business is located physically</span>

                        </li>
                    <li class="list-group-item">

                    <label for="state" class="control-label">State</label>
                        <input type="text" id="state" value="{{config.business.state}}" class="form-control">
                        <span class="help-block">Two Digit State Code</span>

                    </li>
                    <li class="list-group-item">
                    <label for="zipcode" class="control-label">Zip Code</label>
                        <input type="text" id="zipcode" value="{{config.business.zipcode}}" class="form-control">
                        <span class="help-block">5 Digit Postal Code</span>
                    </li>
                    </ul>
                </div>
                <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Save</button>
                </div>
            </form> <!-- /form -->
        </div> <!-- ./container -->
    </div>
</div>
</div>
</div>
<!-- /.row -->
</div>
<!-- /.row -->
</div>
<!-- /.container-fluid -->
</div>