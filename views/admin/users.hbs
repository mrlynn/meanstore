<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                {{>adminmetrics}}
                <h1 class="page-header">
                    {{adminPageTitle}}
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-dashboard"></i>  <a href="/admin">Dashboard</a>
                    </li>
                    <li class="active">
                        <i class="fa fa-bar-chart-o"></i> {{adminPageTitle}}
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="alert alert-success" {{#if noMessage}}hidden{{/if}}>{{successMsg}}</div>
                <div class="alert alert-success" {{#if noErrorMsg}}hidden{{/if}}>{{errorMsg}}</div>
            </div>
        </div>
        <!-- /.row -->
        <!-- /.row -->
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
                        <div id="success" class="alert alert-success" {{#if noMessage}}hidden{{/if}}>
                        {{successMsg}}
                    </div>
                    <div id="danger" class="alert alert-danger" {{#if noErrorMsg}}hidden{{/if}}>
                    {{errorMsg}}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel-heading">
                    <ul class="nav nav-pills">
                        <li role="presentation" class="{{#if allUsers}} active {{/if}}"><a href="/admin/users?filter=allUsers">All Users</a></li>
                        <li role="presentation" class="{{#if adminUsers}} active {{/if}}"><a href="/admin/users?filter=adminUsers">Admin Users </a></li>
                        <li role="presentation" class="{{#if nonAdminUsers}} active {{/if}}"><a href="/admin/users?filter=nonAdminUsers">Non Admin Users</a></li>
                    </ul>
                </div>
            </div>
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th><h3>Name</h3></th>
                                <th><h3>Email</h3></th>
                                <th><h3>Address</h3></th>
                                <th><h3>Telephone</h3></th>
                                <th><h3>Role</h3></th>
                                <th><h3>Purchases</h3></th>
                                <th><h3>Last Login</h3></th>
                                <th><h3>Edit</h3></th>
                                <th><h3>Delete</h3></th>
                                <th><h3>View</h3></th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each users }}
                            <tr class="odd gradeX">
                                <input type='hidden' id='id' name='userId' value='{{ this._id }}'>
                                <td>{{this.first_name}} {{this.last_name}} </td>
                                <td><a href=mailto://{{this.email}}>{{this.email}}</a></td>
                                <td>
                                    {{this.address1}}<br>{{this.city}}, {{this.state}} {{this.zipcode}}
                                </td>
                                <td class="text-left">{{this.telephone}}</td>
                                <td class="text-left">{{this.role}}</td>
                                <td class="text-right">
                                    {{#each this.purchased}}
                                    {{this.code}}
                                    {{/each}}
                                </td>
                                <td class="text-left">{{formatDate this.lastlogin "MM-DD-YYYY HH:mm:ss"}}<br>{{timeAgo this.lastlogin }}</td>
                                </td>
                                <td class="text-left">
                                    <p data-placement="top" data-toggle="tooltip" title="Update User ">
                                        <button class="ui right floated btn btn-success btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit_{{this._id}}"> <span class="glyphicon glyphicon-pencil"></span>
                                        </button>
                                    </p>
                                    <!-- Add Dialog -->
                                    <div class="modal fade" id="edit_{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                                                    <h4 class="modal-title custom_align" id="Heading">Update User</h4>
                                                </div>
                                                <div class="modal-body">
                                                    <form action='/admin/edit-user' method='POST'>
                                                        <input type='hidden' name='_id' value='{{this._id}}'>

                                                        <div class="form-group">
                                                        <ul class="list-group">
                                                        <li class="list-group-item">
                                                            <label for='first_name'>First Name</label>
                                                            <input class="form-control"  name='first_name' value='{{this.first_name}}' type="text" placeholder="">
                                                        </li>
                                                        <li class="list-group-item">
                                                            <label for='last_name'>First Name</label>
                                                            <input class="form-control"  name='last_name' value='{{this.last_name}}' type="text" placeholder="">
                                                        </li>
                                                        <li class="list-group-item">
                                                            <label for='last_name'>Email</label>
                                                            <input class="form-control"  name='last_name' value='{{this.email}}' type="text" placeholder="">
                                                        </li>
                                                        </ul>
                                                            <label for='role'>Role</label>
                                                            <select class='form-control' name='role'>
                                                                <option value='admin'>Admin</option>
                                                                <option value='' selected>Normal</option>
                                                                <option value='banned'>Disabled</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="submit" onClick="submit();" class="btn btn-warning btn-lg" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span>Â Update</button>
                                                    </div>
                                                </form>
                                            </div>
                                            <!-- /.modal-content -->
                                        </div>
                                        <!-- /.modal-dialog -->
                                    </div>
                                </td>
                            <td class="text-center">
                                <form action='/admin/delete-user' method='POST'>
                                    <input type=hidden name='_id' value='{{this._id}}'>
                                    {{!--                                             <input type="hidden" id="_csrf" name="_csrf" value="{{csrfToken}}" />
                                    --}}   <p data-placement="top" data-toggle="tooltip" title="Delete">
                                        <button class="btn btn-danger btn-xs" onClick="submit();"><span class="glyphicon glyphicon-trash"></span></button>
                                    </p>
                                </form>
                            </td>
                            <td class="text-center">
                                <p data-placement="top" class='text-right' data-toggle="tooltip" title="View Order Document ">
                                    <button class="ui right floated btn btn-warning btn-xs" data-title="view" data-toggle="modal" data-target="#view"><span class="glyphicon glyphicon-search"></span>
                                    </button>
                                </p>
                                <!-- Add Dialog -->
                                <div class="modal fade" id="view" tabindex="-1" role="dialog" aria-labelledby="add" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                                                <h4 class="modal-title custom_align" id="Heading">Add New Product</h4>
                                            </div>
                                            <div class="modal-body">
                                                {{this}}
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" onClick='submit();' class="btn btn-warning btn-lg" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span> Add</button>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.modal-content -->
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>
</div>
</div>
<!-- /.row -->
