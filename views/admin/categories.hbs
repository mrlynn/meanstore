<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                {{>adminmetrics}}
                <h1 class="page-header">
                    {{adminPageTitle}}
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-dashboard"></i>  <a href="/admin">Dashboard</a>
                    </li>
                    <li class="active">
                        <i class="fa fa-bar-chart-o"></i> {{adminPageTitle}}
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.row -->
        <!-- /.row -->
        <!-- /.row -->
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
                        <div id="success" class="alert alert-success" {{#if noMessage}}hidden{{/if}}>
                        {{successMsg}}
                    </div>
                    <div id="danger" class="alert alert-danger" {{#if noErrorMsg}}hidden{{/if}}>
                    {{errorMsg}}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="panel-heading">
                        <ul class="nav nav-pills">
                            <li role="presentation" class="{{#if allCategories}} active {{/if}}"><a href="/admin/categories?filter=allCategories">All Categories</a></li>
                            <li role="presentation" class="{{#if deletedCategories}} active {{/if}}"><a href="/admin/categories?filter=deletedCategories">Deleted Categories</a></li>
                        </ul>
                    </div>
                </div>
                <div class="panel-body">
                    <p data-placement="top" class='text-right' data-toggle="tooltip" title="Add New Category ">
                        <button class="ui right floated btn btn-success btn-lg" data-title="Add" data-toggle="modal" data-target="#add">Add Category <span class="glyphicon glyphicon-plus"></span>
                        </button>
                    </p>
                    <!-- Add Dialog -->
                    <div class="modal fade" id="add" tabindex="-1" role="dialog" aria-labelledby="add" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form action="/admin/add-category" method="POST">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                                        <h4 class="modal-title custom_align" id="Heading">Add New Category</h4>
                                    </div>
                                    <form action='/admin/add-category' METHOD='post'>
                                        <div class="modal-body">
                                            <div class="form-group">
                                                <ul class="list-group">
                                                    <li class="list-group-item">
                                                        <label for='name'>Name</label>
                                                        <input class="form-control"  name='name' type="text" placeholder=""></li>
                                                    </ul>
                                                </div>
                                                <div class="form-group">
                                                    <ul class="list-group">
                                                        <li class="list-group-item">
                                                            <label for='price'>Slug</label>
                                                            <input class="form-control" name='slug' type="text" placeholder=""></li>
                                                        </ul>
                                                    </div>
                                                    <div class="form-group">
                                                        <ul class="list-group">
                                                            <li class="list-group-item">
                                                                <label for='description'>Description</label>
                                                            <textarea rows="2" class="form-control" name='description' placeholder=""></textarea></li>
                                                        </ul>
                                                    </div>
                                                    <div class="form-group">
                                                        <ul class="list-group">
                                                            <li class="list-group-item">
                                                                <label for='layout'>Layout</label>
                                                                <select class="form-control" name='layout' placeholder="">
                                                                    <option value='table'>Table</option>
                                                                    <option value='gallery' selected>Gallery</option>
                                                                </select>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </form>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" onClick='submit();' class="btn btn-warning btn-lg" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span> Add</button>
                                            </div>
                                        </form>
                                    </div>
                                    <!-- /.modal-content -->
                                </div>
                                <!-- /.modal-dialog -->
                            </div>
                            <div class="dataTable_wrapper">
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th><h2>Name</h2></th>
                                            <th><h2>Slug</h2></th>
                                            <th><h2>Description</h2></th>
                                            <th><h2>Layout</h2></th>
                                            <th><h2>Edit</h2></th>
                                            <th><h2>Delete</h2></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each categories }}
                                        <tr class="odd gradeX">
                                            <input type='hidden' id='id' name='categoryId' value='{{ this._id }}'>
                                            <td>{{this.name}}</td>
                                            <td>{{this.slug}}</td>
                                            <td>{{this.description}}</td>
                                            <td>{{this.layout}}</td>
                                            <td width=5%>
                                                {{!-- <form action="/admin/edit-category" method="POST">
                                                    <p data-placement="top" data-toggle="tooltip" title="Edit">
                                                        <button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit"><span class="glyphicon glyphicon-pencil"></span></button>
                                                    </p>
                                                </form> --}}
                                                <p data-placement="top" class='text-right' data-toggle="tooltip" title="Edit Category ">
                                                    <button class="ui right floated btn btn-success btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit_{{this._id}}"> <span class="glyphicon glyphicon-pencil"></span>
                                                    </button>
                                                </p>
                                                <!-- Add Dialog -->
                                                <div class="modal fade" id="edit_{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="add" aria-hidden="true">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                                                                    <h4 class="modal-title custom_align" id="Heading">Edit Category</h4>
                                                                </div>
                                                                <form action='/admin/edit-category' METHOD='post'>
                                                                    <input type='hidden' name='id' value='{{this._id}}'>
                                                                    <div class="modal-body">
                                                                        <div class="form-group">
                                                                            <ul class="list-group">
                                                                                <li class="list-group-item">
                                                                                    <label for='name'>Name</label>
                                                                                    <input class="form-control"  name='name' value='{{this.name}}' type="text" placeholder=""></li>
                                                                                </ul>
                                                                            </div>
                                                                            <div class="form-group">
                                                                                <ul class="list-group">
                                                                                    <li class="list-group-item">
                                                                                        <label for='price'>Slug</label>
                                                                                        <input class="form-control" name='slug' value='{{this.slug}}' type="text" placeholder=""></li>
                                                                                    </ul>
                                                                                </div>
                                                                                <div class="form-group">
                                                                                    <ul class="list-group">
                                                                                        <li class="list-group-item">
                                                                                            <label for='description'>Description</label>
                                                                                        <textarea rows="2" class="form-control" name='description' placeholder="">{{this.description}}</textarea></li>
                                                                                    </ul>
                                                                                </div>
                                                                                <div class="form-group">
                                                                                    <ul class="list-group">
                                                                                        <li class="list-group-item">
                                                                                            <label for='layout'>Layout</label>
                                                                                            <select class="form-control" name='layout' placeholder="">
                                                                                                <option value='table'>Table</option>
                                                                                                <option value='gallery' selected>Gallery</option>
                                                                                            </select>
                                                                                        </li>
                                                                                    </ul>
                                                                                </div>
                                                                            </div>
                                                                            <div class="modal-footer">
                                                                                <button type="button" onClick='submit();' class="btn btn-warning btn-lg" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span> Edit</button>
                                                                            </div>
                                                                        </form>
                                                                    </div>
                                                                    <!-- /.modal-content -->
                                                                </div>
                                                                <!-- /.modal-dialog -->
                                                            </div>
                                                        </td>
                                                        <td width=5%>
                                                            <form action='/admin/delete-category' method="POST">
                                                                <input type='hidden' name='id' value='{{this._id}}'>
                                                                <p data-placement="top" data-toggle="tooltip" title="Delete">
                                                                    <button class="btn btn-danger btn-xs" onClick="submit();"><span class="glyphicon glyphicon-trash"></span></button>
                                                                </p>
                                                            </form>
                                                        </td>
                                                    </form>
                                                </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.row -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>