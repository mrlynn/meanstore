<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                {{>adminmetrics}}
                <h1 class="page-header">
                    {{adminPageTitle}}
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-dashboard"></i>  <a href="/admin">Dashboard</a>
                    </li>
                    <li class="active">
                        <i class="fa fa-bar-chart-o"></i> {{adminPageTitle}}
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.row -->
        <!-- /.row -->
        <!-- /.row -->
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
                        <div id="success" class="alert alert-success" {{#if noMessage}}hidden{{/if}}>
                        {{successMsg}}
                    </div>
                    <div id="danger" class="alert alert-danger" {{#if noErrorMsg}}hidden{{/if}}>
                    {{errorMsg}}
                </div>
            </div>
        </div>
        <div class="row"> <!-- main dashboard section -->
<table id="example"></table> 
        </div> <!-- main dashboard section -->
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>


<script>
var table = $('#example').DataTable({
    processing: true,
    serverSide: true,
    ajax: {
        url: "http://localhost:3000/api/products"
    },    
    columns: [ 
        { data : "_id" },
        { data : "name" },
        { data : "title" },
        { data : "Product_Group" },
        { data : "price" },        
        { data : "created" }
   ]     
}); 
</script>