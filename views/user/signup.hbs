<div class="container">
	<h1 class="well">Registration Form</h1>
	<div class="col-lg-12 well">
		<div class="row">
			{{#if hasErrors }}
			<div class="alert alert-danger">
				{{# each message }}
				<p>{{this}}</p>
				{{/each}}
			</div>
			{{/if}}
			<form action="/user/signup" method="POST">
				<div class="col-sm-12">
					<div class="row">
						<div class="col-sm-6 form-group">
							<label>First Name</label>
							<input type="text" name="first_name" value="{{first_name}}" placeholder="Enter First Name Here.." class="form-control">
						</div>
						<div class="col-sm-6 form-group">
							<label>Last Name</label>
							<input type="text" name="last_name" value="{{last_name}}" placeholder="Enter Last Name Here.." class="form-control">
						</div>
					</div>
					<div class="form-group">
						<label>Address</label>
						<textarea placeholder="Enter Address Here.." name="addr1" rows="3" class="form-control">{{addr1}}</textarea>
					</div>
					<div class="row">
						<div class="col-sm-4 form-group">
							<label>City</label>
							<input type="text" value="{{city}}" name="city" placeholder="Enter City Name Here.." class="form-control">
						</div>
						<div class="col-sm-4 form-group">
							<label>State</label>
							<input type="text" value="{{state}}" name="state" placeholder="Enter State Name Here.." class="form-control">
						</div>
						<div class="col-sm-4 form-group">
							<label>Zip</label>
							<input type="text" value="{{zipcode}}" name="zipcode" placeholder="Enter Zip Code Here.." class="form-control">
						</div>
					</div>

					<div class="form-group">
						<label>Phone Number</label>
						<input type="text" value="{{telephone}}" name="telephone" placeholder="Enter Phone Number Here.." class="form-control" required>
					</div>
					<div class="form-group">
						<label>Email Address</label>
						<input type="text" value="{{email}}" name="email" placeholder="Enter Email Address Here.." class="form-control" required>
					</div>
					<div class="row">
						<div class="col-md-6">
							<div class="form-group">
								<label>Password</label>
								<input name="password" type="password" placeholder="Password" class="form-control" value="" required>
							</div>
						</div>
						<div class="col-md-6">
							<label>Confirm Password</label>
							<input name="verifypassword" type="password" placeholder="Verify Password" class="form-control" value="" required>
						</div>
					</div>
					<div class="form-group">
						<label>Website</label>
						<input type="text" name="website" placeholder="Enter Website Name Here.." class="form-control">
					</div>
					<div class="row">
						<div class="col-sm-6 form-group">
							<label>Home Group (optional)</label>
							<input type="text" name="home_group" placeholder="Enter Home Group Here.." class="form-control">
						</div>
						<div class="col-sm-6 form-group">
							<label>Sobriety Date (optional)</label>
							<input type="text" name="sober_date" placeholder="mm/dd/yyyy" class="form-control">
						</div>
					</div>
					<button type="submit" class="btn btn-lg btn-info">Submit</button>
				</div>
				<input type="hidden" name="_csrf" value="{{ csrfToken }}">
			</form>
			<p class="pull-left">Need an account? <a href="/user/signup">Sign Up</a></p>
			<p class="pull-right">Forgot? <a href="/user/forgot">Reset</a></p>
		</div>
	</div>
</div>