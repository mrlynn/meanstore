<div class="container">
	<div class="row">
		{{#if hasErrors }}
		<div class="alert alert-danger">
			{{# each message }}
			<p>{{this}}</p>
			{{/each}}
		</div>
		{{/if}}
		<ul class="nav nav-tabs">
		  <li><a href="/user/profile">Account Details</a></li>
		  <li class="active"><a href="/user/orders">Orders</a></li>
		</ul>
	</div>
	<div class="row">
		<h2>Orders</h2>
		<div class="panel-body">
			{{#each orders}}
			<div class="panel panel-default">
				<div class="panel-body"><h4>Order Status: {{Upper this.status}}</h4>
					<table class="table">
						<thead>
							<tr>
								<th>Date</th><th>Item</th><th>Type</th><th>Paid by</th><th>Qty</th><th>Price</th>
							</tr>
						</thead>
						<tbody>
						{{#each this.cart}}
							<tr>
								<td>{{formatDate ../this.created "MM-DD-YYYY"}}</td>
								<td>{{this.code}} {{this.product_name}} - {{this.product_title}}</td>
								
								<td>{{this.Product_Group}}</td>
								<td>{{this.paidBy}}</td>
								<td>{{this.product_qty}}</td>
								<td>{{money this.product_price}}</td>
							</tr>
						{{/each}}
						</tbody>
					</table>
				</div>
				<div class="panel-footer"><p class="text-right"><h2 class="text-right">{{money this.total}}</h2></p></div>
			
			<p data-placement="top" data-toggle="tooltip" title="View Document ">
        <button class="ui right floated btn btn-warning btn-xs" data-title="view" data-toggle="modal" data-target="#view-{{this._id}}"> <span class="glyphicon glyphicon-eye-open"></span>
        </button>
</p>
<!-- Add Dialog -->
<div class="modal fade" id="view-{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="view" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                <h4 class="modal-title custom_align" id="Heading">View Product</h4>
            </div>
            <div class="modal-body">
                <pre><code class="prettyPrint">{{JSON this}}</code></pre>
            </div>
        <!-- /.modal-content -->
        </div>
    <!-- /.modal-dialog -->
    </div>
</div>
			
			
			
			</div>
			{{/each}}
		</div>
	</div>
</div>
<p><p>&nbsp;<p><p><p><p>&nbsp;<p><p>